import java.util.Scanner;

public class AssistentePessoal {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Bem Vindo ao seu Assistente Pessoal");
        System.out.print("Para começarmos diga seu Nome: ");
        String nome = scanner.nextLine();
        System.out.println("Olá, " + nome + "! O que vamos criar hoje? Opções:");
        System.out.println("1. Alarmes para tomar remédio");
        System.out.println("2. Lista de compras");
        System.out.println("3. Usar agenda Google para agendar um compromisso");
        System.out.println("4. Tarefas diárias");

        int escolha = scanner.nextInt();
        scanner.nextLine(); // Consumir a quebra de linha

        switch (escolha) {
            case 1:
                criarAlarmesRemedio(scanner);
                break;
            case 2:
                criarListaCompras(scanner);
                break;
            case 3:
                agendarCompromissoGoogle(scanner);
                break;
            case 4:
                gerenciarTarefasDiarias(scanner);
                break;
            default:
                System.out.println("Opção inválida. Por favor, tente novamente.");
        }

        System.out.println("Obrigado por usar o Assistente Pessoal!");
        scanner.close();
    }

