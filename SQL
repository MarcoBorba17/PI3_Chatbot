-- Criar o banco de dados (se não existir)
sqlite3 meu_assistente.db

-- Criar a tabela usuarios
CREATE TABLE usuarios (
    id_usuario INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    data_cadastro TEXT NOT NULL
);

-- Inserir dados na tabela usuarios
INSERT INTO usuarios (nome, data_cadastro) VALUES ('Ana Silva', '2025-05-10 10:00:00');
INSERT INTO usuarios (nome, data_cadastro) VALUES ('Pedro Oliveira', '2025-05-10 10:15:00');
