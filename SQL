INSERT INTO usuarios (nome, data_cadastro) VALUES ('Lucas Ferreira', '2025-05-12 09:45:00');
INSERT INTO usuarios (nome, data_cadastro) VALUES ('Juliana Costa', '2025-05-13 16:20:00');

-- Criar a tabela testes
CREATE TABLE testes (
    id_teste INTEGER PRIMARY KEY AUTOINCREMENT,
    id_usuario INTEGER NOT NULL,
    funcionalidade_testada TEXT NOT NULL,
    data_teste TEXT NOT NULL,
    avaliacao TEXT,
    observacoes TEXT,
    FOREIGN KEY (id_usuario) REFERENCES usuarios(id_usuario)
);

